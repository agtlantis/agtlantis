{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2023"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@e2e/*": ["./e2e/*"]
    },
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src/**/*", "e2e/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
